:8051 {

    # 配置日志
    log {
        access_path ./access.log
        err_path ./error.log
        # 配置日志输出内容，具体可以输出哪些可以参见文档
        # 这里也可以只写一个format后面啥都不写，表示使用默认的格式
        format {
            remote_addr
            host
            method
            request_uri
            status
            start_time # 请求到来的时间点
            process_time # 处理请求的耗时
            bytes_sent
            user_agent
            response_body # 打印response body
        }
    }

    upstream backend {
        unix:/var/run/php/php7.3-fpm.sock
    }

    fastcgi \.php {
        root /home/caibirdme/site
        script_filename $document_root/index.php
        index index.php
        catch_stderr "PHP Fatal Error"
        debug
        read_timeout 3s
        send_timeout 3s
        upstream backend
    }
}
